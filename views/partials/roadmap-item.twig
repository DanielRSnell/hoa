<article class="roadmap-item">
  <h2>{{ post.title }}</h2>
  {% if post.thumbnail %}
    <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
  {% endif %}
  
  {% if post.meta('visibility') == 'public' %}
    <div class="external-content">
      {{ post.meta('external').notes }}
      <div class="meta">{{ post.meta('external').meta }}</div>
    </div>
  {% endif %}
  
  {% if is_user_logged_in %}
    <div class="internal-content">
      {{ post.meta('internal').notes }}
      <div class="meta">{{ post.meta('internal').meta }}</div>
    </div>
  {% endif %}
  
  <div class="status">
    Status: {{ post.terms('roadmap_status')|join(', ') }}
  </div>
</article>
