<div class="relative isolate overflow-hidden bg-gray-900">
  {% if background %}
    <img src="{{ background.url }}" alt="{{ background.alt }}" class="absolute inset-0 -z-10 h-full w-full object-cover mix-blend-multiply">
    <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
  {% endif %}

  <div class="relative mx-auto max-w-7xl px-6 py-32 sm:py-40 lg:px-8">
    {% if announcement.text %}
      <div class="hidden sm:mb-8 sm:flex sm:justify-center">
        <div class="relative rounded-full px-3 py-1 text-sm leading-6 text-gray-400 ring-1 ring-white/10 hover:ring-white/20">
          {{ announcement.text }}
          {% if announcement.link %}
            <a href="{{ announcement.link.url }}" class="font-semibold text-white">
              <span class="absolute inset-0" aria-hidden="true"></span>
              {{ announcement.link.text }} <span aria-hidden="true">&rarr;</span>
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}

    <div class="mx-auto max-w-2xl text-center">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">{{ content.heading }}</h1>
      <p class="mt-6 text-lg leading-8 text-gray-300">{{ content.description }}</p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="{{ cta.primary.url }}" class="rounded-md bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-400">
          {{ cta.primary.text }}
        </a>
        {% if cta.secondary %}
          <a href="{{ cta.secondary.url }}" class="text-sm font-semibold leading-6 text-white">
            {{ cta.secondary.text }} <span aria-hidden="true">â†’</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
